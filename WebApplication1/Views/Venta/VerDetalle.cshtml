@model Venta

@{
    ViewData["Title"] = "Detalle de Venta";
}

<h2>Detalle de Venta</h2>

<div>
    <h4>Venta: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha y Hora:
        </dt>
        <dd class="col-sm-10">
            @Model.Fecha_hora
        </dd>
        <dt class="col-sm-2">
            Cliente:
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente
        </dd>
        <dt class="col-sm-2">
            Total:
        </dt>
        <dd class="col-sm-10">
            @Model.Total.ToString("C")
        </dd>
    </dl>
</div>

<h3>Detalles:</h3>
<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Total por Línea</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalle)
        {
            <tr>
                <td>@detalle.Producto.Nombre</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Total_linea.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
